---
import { getRootPage } from '../lib/fetchPages.js';
import Puck from '../components/Puck.jsx';

const data = await getRootPage();

const title = data.data?.title || 'Bizarre Belt';
const description = data.data?.description || 'Welcome to Bizarre Belt';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
    <main>
        <div>
          <Puck data={data.data} />
        </div>
    </main>
</body>
</html>
